GMAIL_APP_PASSWORD="tu-contraseña-de-aplicacion-de-16-digitos"

# SMTP Configuration (para envío de emails)
# NOTA: Si ya tenés GMAIL_USER y GMAIL_APP_PASSWORD configurados,
# el sistema los usará automáticamente. Solo configurá estas variables
# si querés usar credenciales diferentes para envío de emails.
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
# SMTP_USER="tu-email@gmail.com"  # Opcional: usa GMAIL_USER por defecto
# SMTP_PASSWORD="tu-contraseña-de-aplicacion"  # Opcional: usa GMAIL_APP_PASSWORD por defecto
